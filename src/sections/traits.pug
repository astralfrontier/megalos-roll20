//- Traits

-
  var trait_attributes = [
    {
      attr: "trait_background",
      label: "Background"
    },
    {
      attr: "trait_physical",
      label: "Physical"
    },
    {
      attr: "trait_mental",
      label: "Mental",
    },
    {
      attr: "trait_special",
      label: "Special"
    }
  ]

each entry in trait_attributes
  .columns
    .column.is-one-fifth= entry.label
    .column
      input(type="text" name=entry.attr list=entry.list)
    .column.is-narrow 
      button.noctis-button-green.d20(type="action" name="act_trait" data-trait-attr=attr)