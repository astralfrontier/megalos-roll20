mixin status(name)
  .row
    .col-xs-8
      strong= name.toUpperCase()
      block
    .col-xs-4
      input(type="number" name=`attr_status_save_${name}`)
      button.sheet-blank-button.noctis-button-yellow(type="action" name="act_save" data-status-name=name)

mixin condition(name)
  .row
    .col-xs-8
      strong= name.toUpperCase()
      block
    .col-xs-4
      input(type="number" name=`attr_condition_${name}`)
      button.noctis-button-yellow(type="action" name="act_addcondition" data-condition-name=name) +

