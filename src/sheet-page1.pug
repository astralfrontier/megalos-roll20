.sheet.sheet-page1
  .row
    .cell
      //- Top level
      +section()
        .row.centered
          .cell
            #sheet-logo MEGALOS
          .cell
            +box_current_max("HP", "hp")
          .cell
            +box_current_max("Armor HP", "armor_hp")
          .cell
            +box_current_max("Recovery", "recovery")

  .row.centered
    //- Left column
    .cell
      .column
        .cell
          +section("Character Profile")
            include profile
        .cell
          +section("Bonds")
            include bonds
        .cell
          +section("Weapon")
            include weapon
        .cell
          +section("Armor")
            include armor
        .cell
          +section("Soak")
            include soak
    //- Right column
    .cell
      .column
        .cell
          +section()
            .row.centered
              .cell
                +box_value("Level", "level")
              .cell
                +box_value("XP", "xp")
              .cell
                +box_value("RB", "rb")
        .cell
          +section("Skills")
            include skills
        .cell
          +section("Traits")
            include traits
        .cell
          +section("Inventory")
            include inventory
