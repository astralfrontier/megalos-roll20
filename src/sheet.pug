//- Helpers for blocking out sections of the sheet
include containers

.megalos-sheet
  section#megalos-top
    .columns
      .column
        TODO MEGALOS ICON
      .column
        +box_current_max("HP", "hp")
      .column
        +box_current_max("Armor HP", "armor_hp")
      .column
        +box_current_max("Recovery", "recovery")
  section#megalos-biography
    .columns
      .column
        input.input(type="text" name="attr_name" placeholder="Character Name")
        input.input(type="text" name="attr_pronouns" placeholder="Pronouns")
      .column
        input.input(type="text" name="attr_class_calling" placeholder="Class & Calling")
        input.input(type="text" name="attr_homeland" placeholder="Homeland")
  section#megalos-main
    .columns
      .column#skills
        +section("Skills")
          include skills

      .column#traits-inventory
        +section("Talents")
          include talents

        +section("Inventory")
          include inventory

  //- Pull in datalists for auto completing text fields
  include datalists

script(type="text/worker")
  include sheet.js