.row
  each val in ["physical", "astral", "umbral", "toxic"]
    - var label = val.charAt(0).toUpperCase() + val.slice(1)
    - var attr_name = `soak_${val}`
    .cell
      +box_value(label, attr_name)
        button.sheet-blank-button(type="roll" value=`&{template:soak} {{name=${label}}} {{roll=[[@{soak_dice}d6kh1+@{${attr_name}}]]}}` name="roll_soak")
.row
  .cell
    +box_value("Soak Dice", "soak_dice")