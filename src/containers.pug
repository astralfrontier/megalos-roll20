//- Show a section of the character sheet, wrapped in a frame, with a given title
mixin section(title)
  section.block
    .has-background-primary.p-2.mb-4
      h3.title.is-3.has-text-white= title
    if block
      block

mixin box_value(label, attr_name)
  article.message.is-primary
    .message-header
      p= label
    .message-body
      .columns
        .column
          .field
            .control
              input.input.is-expanded.boxed-value(type="number" name=`attr_${attr_name}` value="0")
            p.help Value

//- Show two framed boxes of current and maximum values, e.g. HP
mixin box_current_max(label, attr_name)
  article.message.is-primary
    .message-header
      p= label
    .message-body
      .columns
        .column
          .field
            .control
              input.input.is-expanded.boxed-value(type="number" name=`attr_${attr_name}` value="0")
            p.help Current
        .column
          .field
            .control
              input.input.is-expanded.boxed-value(type="number" name=`attr_${attr_name}_max` value="0")
            p.help Max