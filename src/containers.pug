//- Show a section of the character sheet, wrapped in a frame, with a given title
mixin section(title)
  section
    .has-background-primary.p-2.mb-4
      h3.title.is-3.has-text-white= title
    if block
      block

//- Show two black-framed boxes of current and maximum values, e.g. HP
mixin box_current_max(label, attr_name)
  .box-current-max
    .box-current-max-label
      span= label
    .box-current-value
      input(type="number" name=`attr_${attr_name}`)
    .box-max-value
      input(type="number" name=`attr_${attr_name}_max`)