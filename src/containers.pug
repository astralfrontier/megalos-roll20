//- Show a section of the character sheet, wrapped in a frame, with a given title
mixin section(title, icon)
  section.noctis-section
    if icon
      span.noctis-section-icon!= icon
    if title
      if icon
        h3.noctis-section-title.noctis-section-offset= title
      else
        h3.noctis-section-title= title
    if block
      .noctis-section-body
        block

mixin box_default(label, help)
  .noctis-box
    h4.noctis-box-title= label
    if block
      .row.center
        .col.center
          block
          if help
            p= help

mixin box_value(label, attr_name, help = "Value")
  +box_default(label, help)
    input(type="number" name=`attr_${attr_name}` value="0")&attributes(attributes)
    if block
      block

//- Show two framed boxes of current and maximum values, e.g. HP
mixin box_current_max(label, attr_name)
  .noctis-box
    h4.noctis-box-title= label
    .row.center.minimal
      .col.center
        input(type="number" name=`attr_${attr_name}` value="0")
        p Current
      .col.center
        input(type="number" name=`attr_${attr_name}_max` value="0")
        p Max
